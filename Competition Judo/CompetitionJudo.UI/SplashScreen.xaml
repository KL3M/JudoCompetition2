<Window x:Class="CompetitionJudo.UI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="400" Width="400"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        >
    <StackPanel Orientation="Vertical" >
        <Image Source="Resources\logoJudo.png" Stretch="Fill" Height="250" Margin="10,0"/>
        <StackPanel  Name="stackpanel" Margin="10,0,400,0" >
            <Image Name="myImage" Source="Resources\BlackBelt.png" Stretch="Fill" Height="60"  Width="400" />
        </StackPanel>

    </StackPanel>
</Window>
